# ========================================
# Network Configuration
# ========================================

# Network RPC URLs
# Get your API key from https://infura.io/ or https://www.alchemy.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternative: SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Mainnet RPC (for production deployment)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ========================================
# Security & Authentication
# ========================================

# Private Key
# WARNING: Never share or commit your actual private key!
# Export from MetaMask: Account Details > Export Private Key
# Remove the '0x' prefix when pasting here
PRIVATE_KEY=your_private_key_without_0x_prefix

# Deployer Address (optional, for verification)
DEPLOYER_ADDRESS=0x0000000000000000000000000000000000000000

# ========================================
# Contract Verification
# ========================================

# Etherscan API Key
# Get your API key from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# Gas & Performance Monitoring
# ========================================

# Gas Reporting
# Set to true to generate detailed gas usage reports during testing
REPORT_GAS=false

# Coinmarketcap API (for USD gas cost calculation)
# Get your API key from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas Price (optional, in gwei)
GAS_PRICE=auto

# Gas Limit (optional)
GAS_LIMIT=8000000

# ========================================
# OpenZeppelin Defender (Security)
# ========================================

# Defender API credentials for automated security monitoring
# Get from https://defender.openzeppelin.com/
DEFENDER_API_KEY=your_defender_api_key_here
DEFENDER_API_SECRET=your_defender_api_secret_here

# Defender Team ID (optional)
DEFENDER_TEAM_ID=your_team_id_here

# ========================================
# Role-Based Access Control
# ========================================

# Pauser Role Configuration
# Address allowed to pause contract in emergency
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Admin Role (for upgradeable contracts)
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Curator Role (for Heritage Protection)
CURATOR_ADDRESS=0x0000000000000000000000000000000000000000

# ========================================
# Testing & Development
# ========================================

# Enable verbose logging
DEBUG=false

# Test mode
TEST_MODE=false

# Coverage reporting
COVERAGE=false

# ========================================
# CI/CD Configuration
# ========================================

# GitHub Token (for automated releases)
GITHUB_TOKEN=your_github_token_here

# Codecov Token (for coverage reports)
CODECOV_TOKEN=your_codecov_token_here

# ========================================
# Performance Optimization
# ========================================

# Compiler optimization runs
OPTIMIZER_RUNS=200

# Enable contract size checks
CHECK_CONTRACT_SIZE=true

# Maximum contract size (bytes)
MAX_CONTRACT_SIZE=24576

# ========================================
# Security Settings
# ========================================

# Enable security checks
SECURITY_CHECKS=true

# Rate limiting (requests per minute)
RATE_LIMIT=60

# DoS protection threshold
DOS_PROTECTION_THRESHOLD=100

# ========================================
# Monitoring & Alerts
# ========================================

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email for notifications (optional)
NOTIFICATION_EMAIL=alerts@example.com

# ========================================
# Frontend Configuration (if applicable)
# ========================================

# API Base URL
API_BASE_URL=https://api.example.com

# Frontend URL
FRONTEND_URL=https://app.example.com

# WebSocket URL
WEBSOCKET_URL=wss://api.example.com/ws
